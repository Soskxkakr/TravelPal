<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/padding_xs">

    <ImageView
        android:id="@+id/img_item"
        android:layout_width="@dimen/sl_image_size"
        android:layout_height="@dimen/sl_image_size"
        android:src="@color/iv_placeholder"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/sl_margin_md"
            android:layout_marginTop="@dimen/sl_margin_sm"
            android:layout_marginRight="@dimen/sl_margin_md"
            android:text="@string/sl_title"
            android:textSize="@dimen/sl_text_md" />

        <TextView
            android:id="@+id/tv_from_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="@dimen/sl_margin_md"
            android:layout_marginTop="@dimen/sl_margin_sm"
            android:layout_marginRight="@dimen/sl_margin_md"
            android:text="@string/default_date"
            android:textSize="@dimen/sl_text_md" />

        <TextView
            android:id="@+id/tv_to_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_from_date"
            android:layout_marginLeft="@dimen/sl_margin_md"
            android:layout_marginTop="@dimen/sl_margin_sm"
            android:layout_marginRight="@dimen/sl_margin_md"
            android:text="@string/default_date"
            android:textSize="@dimen/sl_text_md" />

        <TextView
            android:id="@+id/tv_payment_approved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_to_date"
            android:layout_marginLeft="@dimen/sl_margin_md"
            android:layout_marginTop="@dimen/sl_margin_sm"
            android:layout_marginRight="@dimen/sl_margin_md"
            android:textColor="#013220"
            android:text="Payment Approved"
            android:textSize="@dimen/sl_text_md" />

    </RelativeLayout>

</LinearLayout>